<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Dashboard Page</title>

    <!-- Bootstrap core CSS -->
    <link href="../public/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../public/css/index.css">
    <link rel="stylesheet" href="../public/css/sidebars.css">

</head>

<body>
    <main>
        <%- include("layouts/sidebar")  %>

            <div class="container mt-5">
                <form action="/dashboard/filter" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <div class="row">
                                <div class="col">
                                    <label for="inputUsername">Type username to search score</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input type="username" class="form-control mh-100" id="inputUsername" placeholder="Username" name="username">
                                </div>
                                <div class="col">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <ul class="list-group mt-3">
                    <% result.forEach(x => { %>
                        <li class="list-group-item">
                            <%= x.game %>
                                <%= x.score %>
                        </li>

                        <% }) %>
                </ul>
            </div>

    </main>
</body>

</html>